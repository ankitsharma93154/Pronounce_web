{
  "redirects": [
    {
      "source": "/ads.txt",
      "destination": "https://srv.adstxtmanager.com/19390/quickpronounce.site",
      "permanent": true
    },
    {
      "source": "/:path*",
      "has": [
        { "type": "host", "value": "quickpronounce.site" }
      ],
      "destination": "https://www.quickpronounce.site/:path*",
      "permanent": true
    }
  ],

  "rewrites": [
    { "source": "/manifest.json", "destination": "/manifest.json" },
    { "source": "/static/:path*", "destination": "/static/:path*" },
    { "source": "/:path*", "destination": "/index.html" }
  ],

  "headers": [
    {
      "source": "/404.html",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/data/:path*.json",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=3600, stale-while-revalidate=86400" }
      ]
    },
    {
      "source": "/static/:path*",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/:path*.(jpg|jpeg|png|svg|ico|js|css|woff|woff2)$",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}
